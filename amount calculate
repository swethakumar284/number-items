#include <stdio.h>

int main() {
    int n, i, quantity;
    float price, total = 0;

    printf("Enter number of items: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        printf("\nItem %d\n", i);
        printf("Enter price: ");
        scanf("%f", &price);
        printf("Enter quantity: ");
        scanf("%d", &quantity);

        total = total + (price * quantity);
    }

    printf("\nTotal Bill Amount = %.2f\n", total);

    return 0;
}
